<Window x:Class="WebTodoApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"

        xmlns:m="clr-namespace:WebTodoApp.Models"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:vms="clr-namespace:WebTodoApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vms:MainWindowViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding Title}" Height="500" Width="800">

    <Window.InputBindings>
        <KeyBinding Key="Return" Modifiers="Ctrl" Command="{Binding InsertTodoCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />

        <Menu Grid.Row="0">
            <MenuItem Header="ファイル">
                <MenuItem Header="終了"
                          Command="{Binding ExitCommand}"
                          />
            </MenuItem>

            <MenuItem Header="接続">
                <MenuItem Header="再接続"
                          Command="{Binding DatabaseHelper.TryFirstConnectCommand}"
                          />
            </MenuItem>

        </Menu>

        <ListView ItemsSource="{Binding DatabaseHelper.TodoList}"
                  Grid.Row="1"
                  >

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="BorderBrush" Value="LightGray"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </ListView.ItemContainerStyle>


            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel.InputBindings>
                            <KeyBinding Key="Return" Modifiers="Ctrl" 
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=Window},Path=DataContext.DatabaseHelper.UpdateCommand}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}}"/>
                        </StackPanel.InputBindings>

                        <StackPanel Orientation="Horizontal" Margin="0,2">

                            <TextBlock Text="{Binding Priority}"
                                       Margin="5,0"
                                       Width="15"
                                       />

                            <CheckBox IsChecked="{Binding Completed}"
                                      Margin="0,1,0,0"
                                      >
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Checked">
                                        <i:InvokeCommandAction Command="{Binding CompleteCommand}" />
                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=Window},Path=DataContext.DatabaseHelper.UpdateCommand}"
                                                               CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                                               />
                                    </i:EventTrigger>

                                    <i:EventTrigger EventName="Unchecked">
                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=Window},Path=DataContext.DatabaseHelper.UpdateCommand}"
                                                               CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                                               />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </CheckBox>

                            <CheckBox IsChecked="{Binding Started}"
                                      Background="AntiqueWhite"
                                      >
                                
                            </CheckBox>

                            <TextBlock Text="{Binding CreationDateShortString}"
                                       Margin="5,0"
                                       />

                            <TextBox x:Name="titleTextBox"
                                       Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                       IsReadOnly="True"
                                       BorderThickness="0"
                                       BorderBrush="Black"
                                       Background="Transparent"
                                       >

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=Window},Path=DataContext.ToWritableCommand}"
                                                               CommandParameter="{Binding ElementName=titleTextBox}"
                                                               />
                                    </i:EventTrigger>

                                    <i:EventTrigger EventName="LostKeyboardFocus">
                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=Window},Path=DataContext.ToReadOnlyCommand}"
                                                               CommandParameter="{Binding ElementName=titleTextBox}"
                                                               />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                            </TextBox>
                        </StackPanel>

                        <TextBlock Text="{Binding TextContent}"
                                   Margin="35,0,0,0"
                                   />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <TabControl Grid.Row="2">
            <TabItem Header="Todo">

                <DockPanel>

                    <Grid DockPanel.Dock="Top" 
                          Margin="0,3"
                          >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Priority : "
                                   HorizontalAlignment="Right"
                                   Grid.Column="0" 
                                   />

                        <TextBox Grid.Column="1"
                                 Text="{Binding EnteringTodo.Priority}"
                                 />

                        <TextBlock Text="Duration : "
                                 HorizontalAlignment="Right"
                                 Grid.Column="2"
                                 />

                        <TextBox Grid.Column="3" 
                                 Text="{Binding EnteringTodo.Duration}"
                                 />

                        <TextBlock Text="Title : "
                                 HorizontalAlignment="Right"
                                 Grid.Column="4"
                                 />

                        <TextBox HorizontalAlignment="Stretch"
                                 Text="{Binding EnteringTodo.Title}"
                                 Grid.Column="5"
                                 />

                    </Grid>


                    <TextBox HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             DockPanel.Dock="Bottom"
                             AcceptsReturn="True"
                             Text="{Binding EnteringTodo.TextContent, UpdateSourceTrigger=PropertyChanged}"
                             >
                        
                    </TextBox>

                </DockPanel>

            </TabItem>

            <TabItem Header="Comment">
                <TextBox>
                    
                </TextBox>
            </TabItem>

        </TabControl>

        <StatusBar Grid.Row="3">

            <StatusBarItem>
                <TextBlock Text="{Binding DatabaseHelper.Message}"/>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
