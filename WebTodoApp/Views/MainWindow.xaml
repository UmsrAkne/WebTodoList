<Window x:Class="WebTodoApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"

        xmlns:m="clr-namespace:WebTodoApp.Models"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:vms="clr-namespace:WebTodoApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vms:MainWindowViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding Title}" Height="500" Width="800">

    <Window.Resources>
        <ControlTemplate x:Key="radiusButtonTemplate"
                         TargetType="ToggleButton">
            <Border x:Name="border"
                    BorderThickness="1"
                    BorderBrush="LightGray" 
                    CornerRadius="4"
                    >
                <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  />

            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="border"
                            Property="Background"
                            Value="LightSkyBlue" />
                </Trigger>

                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="border"
                            Property="Background"
                            Value="LightSkyBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>


        </ControlTemplate>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Return" Modifiers="Ctrl" Command="{Binding InsertTodoCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />

        <Menu Grid.Row="0">
            <MenuItem Header="ファイル">
                <MenuItem Header="終了"
                          Command="{Binding ExitCommand}"
                          />
            </MenuItem>

            <MenuItem Header="接続">
                <MenuItem Header="再接続"
                          Command="{Binding DatabaseHelper.TryFirstConnectCommand}"
                          />
            </MenuItem>

        </Menu>

        <ToolBar Grid.Row="1">
            <ToggleButton BorderBrush="Azure"
                          IsChecked="{Binding DatabaseHelper.SqlCommandOption.ShowOnlyIncompleteTodo}"
                          Command="{Binding DatabaseHelper.LoadCommand}"
                          >

                <ContentControl>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <!-- ToggleButton の IsChecked が切り替わったら透明度を変化させる -->
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton},Path=IsChecked}" Value="False">
                                        <Setter Property="Opacity" Value="0.4" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="未完了のみ表示"
                                   />
                    </StackPanel>
                </ContentControl>
            </ToggleButton>
        </ToolBar>

        <ListView ItemsSource="{Binding DatabaseHelper.TodoList}"
                  Grid.Row="2"
                  >

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="BorderBrush" Value="LightGray"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </ListView.ItemContainerStyle>


            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <DockPanel.InputBindings>
                            <KeyBinding Key="Return" Modifiers="Ctrl" 
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=Window},Path=DataContext.DatabaseHelper.UpdateCommand}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}}"/>
                        </DockPanel.InputBindings>

                        <TextBlock Text="{Binding Priority}"
                                   Width="20"
                                   DockPanel.Dock="Left"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   />

                        <StackPanel Orientation="Horizontal" Margin="0,2"
                                    DockPanel.Dock="Top"
                                    >


                            <CheckBox IsChecked="{Binding Completed}"
                                      Margin="0,1,0,0"
                                      >
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Checked">
                                        <i:InvokeCommandAction Command="{Binding CompleteCommand}" />
                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=Window},Path=DataContext.DatabaseHelper.UpdateCommand}"
                                                               CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                                               />
                                    </i:EventTrigger>

                                    <i:EventTrigger EventName="Unchecked">
                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=Window},Path=DataContext.DatabaseHelper.UpdateCommand}"
                                                               CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}}"
                                                               />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </CheckBox>

                            <ToggleButton Margin="6,0,3,0"
                                          Template="{StaticResource radiusButtonTemplate}"
                                          IsChecked="{Binding Started}"
                                          >
                                <ContentControl>
                                    <TextBlock Text="Start"
                                               Padding="4,0"
                                               />
                                </ContentControl>
                            </ToggleButton>

                            <TextBlock Text="{Binding CreationDateShortString}"
                                       Margin="5,0"
                                       />

                            <TextBox x:Name="titleTextBox"
                                       Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                       IsReadOnly="True"
                                       BorderThickness="0"
                                       BorderBrush="Black"
                                       Background="Transparent"
                                       >

                                <i:Interaction.Behaviors>
                                    <m:TextBoxROChangeBehavior/>
                                </i:Interaction.Behaviors>

                            </TextBox>
                        </StackPanel>

                        <TextBox Text="{Binding TextContent}"
                                 BorderThickness="0"
                                 BorderBrush="Black"
                                 Background="Transparent"
                                 >

                            <i:Interaction.Behaviors>
                                <m:TextBoxROChangeBehavior/>
                            </i:Interaction.Behaviors>

                        </TextBox>
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <TabControl Grid.Row="3">
            <TabItem Header="Todo">

                <DockPanel>

                    <Grid DockPanel.Dock="Top" 
                          Margin="0,3"
                          >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Priority : "
                                   HorizontalAlignment="Right"
                                   Grid.Column="0" 
                                   />

                        <TextBox Grid.Column="1"
                                 Text="{Binding EnteringTodo.Priority}"
                                 />

                        <TextBlock Text="Duration : "
                                 HorizontalAlignment="Right"
                                 Grid.Column="2"
                                 />

                        <TextBox Grid.Column="3" 
                                 Text="{Binding EnteringTodo.Duration}"
                                 />

                        <TextBlock Text="Title : "
                                 HorizontalAlignment="Right"
                                 Grid.Column="4"
                                 />

                        <TextBox HorizontalAlignment="Stretch"
                                 Text="{Binding EnteringTodo.Title}"
                                 Grid.Column="5"
                                 />

                    </Grid>


                    <TextBox HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             DockPanel.Dock="Bottom"
                             AcceptsReturn="True"
                             Text="{Binding EnteringTodo.TextContent, UpdateSourceTrigger=PropertyChanged}"
                             >
                        
                    </TextBox>

                </DockPanel>

            </TabItem>

            <TabItem Header="Comment">
                <TextBox Text="{Binding EnteringComment.TextContent, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Modifiers="Ctrl" Key="Return"
                                    Command="{Binding InsertCommentCommand}"
                                    />
                    </TextBox.InputBindings>
                </TextBox>
            </TabItem>

        </TabControl>

        <StatusBar Grid.Row="4">

            <StatusBarItem Grid.Column="0">
                    <TextBlock Text="{Binding DatabaseHelper.Message}"
                               />

            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total "/>
                    <TextBlock Text="{Binding DatabaseHelper.TodoCount}"/>
                    <TextBlock Text=" todo."/>

                </StackPanel>
            </StatusBarItem>

        </StatusBar>

    </Grid>
</Window>
